{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "conan install DEBUG",
			"command": "conan",
			"args": [
				"install",
				".",
				"--build=missing",
				"-sbuild_type=Debug",
				"--profile=ConanProfiles/${input:profile}",
				"-v"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				 "env": {
                    "PATH": "${env:HOME}/.pyenv/versions/3.12.8/bin/:${env:PATH}"
                }
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "conan install RELEASE",
			"command": "conan",
			"args": [
				"install",
				".",
				"--build=missing",
				"-sbuild_type=Release",
				"--profile=ConanProfiles/${input:profile}",
				"-v"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				 "env": {
					"PATH": "${env:HOME}/.pyenv/versions/3.12.8/bin/:${env:PATH}"
				}
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "conan install RELWITHDEBINFO",
			"command": "conan",
			"args": [
				"install",
				".",
				"--build=missing",
				"-sbuild_type=RelWithDebInfo",
				"--profile=ConanProfiles/${input:profile}",
				"-v"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				 "env": {
					"PATH": "${env:HOME}/.pyenv/versions/3.12.8/bin/:${env:PATH}"
				}
			},
			"group": "build",
			"problemMatcher": []
		},
	],
	"inputs": [
		{
			"id": "profile",
			"type": "pickString",
			"description": "Conan profile to use",
			"options": [
				{
					"label": "Conan Clang Profile",
					"value": "ClangProfile"
				},
				{
					"label": "Conan GCC Profile",
					"value": "GccProfile"
				},
				{
					"label": "Conan MSVC Profile",
					"value": "MsvcProfile"
				}
			],
			"default": "GccProfile"
		},
	]
}
